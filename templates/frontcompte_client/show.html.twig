{% extends 'base.html.twig' %}

{% block title %}<title>CompteClient</title>{% endblock %}

{% block content %}
<style>
		/* Container for the form */
		.form-container {
			/* Increase the max-width to make the container wider */
			margin: 0 auto;
			padding: 20px;
			border: 1px solid #ccc;
			border-radius: 5px;
			background-color: #f9f9f9;
		}

		/* Styles for form fields */
		.form-field {
			margin-bottom: 20px;
		}

		.form-label {
			display: block;
			font-weight: bold;
			margin-bottom: 5px;
		}

		.form-input {
			width: 100%;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
		}

		/* Style for the button */
		.btn {
			background-color: #007bff; /* Blue background */
			color: white;
			padding: 10px 20px;
			border: none;
			border-radius: 5px;
			cursor: pointer;
			transition: background-color 0.3s;
		}

		/* Hover effect */
		.btn:hover {
			background-color: #0056b3; /* Darker blue on hover */
		}
	</style>
    <div class="form-container"> 
    <h1>CompteClient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte_client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ compte_client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ compte_client.prenom }}</td>
            </tr>
            <tr>
                <th>Rib</th>
                <td>{{ compte_client.rib }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ compte_client.mail }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ compte_client.tel }}</td>
            </tr>
            <tr>
                <th>Solde</th>
                <td>{{ compte_client.solde }}</td>
            </tr>
			 <tr>
                <th>Type</th>
                <td>
                {% if compte_client.getNomType() is not null %}
                    {{ compte_client.getNomType().NomType }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Pack</th>
                <td>
                 {% if compte_client.getNomPack() is not null %}
                    {{ compte_client.getNomPack().NomPack }}
                    {% endif %}
                </td>
             </tr>
        </tbody>
    </table>

     <a href="{{ path('app_frontcompte_client'), {'id': app.user.id} }}" class="btn btn-primary" style="width: 150px; display: block; margin: 0 auto;">Back to List</a>

	<a href="{{ path('app_frontcompte_client_edit', {'id': compte_client.id}) }}" class="btn btn-primary" style="width: 150px; display: block; margin: 0 auto;">Edit</a>


    {{ include('frontcompte_client/_delete_form.html.twig') }}
    </div>
{% endblock %}