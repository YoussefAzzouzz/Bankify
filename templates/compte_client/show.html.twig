{% extends 'backbase.html.twig' %}

{% block title %}<title>CompteClient</title>{% endblock %}

{% block content %}
<section Style='margin-left:20px' >
<style>
			/* Styles for the buttons */
			.btn {
				display: inline-block;
				background-color: #007bff; /* Blue background */
				color: white;
				padding: 10px 20px;
				text-align: center;
				text-decoration: none;
				border: none;
				border-radius: 5px;
				cursor: pointer;
				transition: background-color 0.3s;
				margin-right: 10px; /* Add some margin between the buttons */
			}

			/* Hover effect */
			.btn:hover {
				background-color: #0056b3; /* Darker blue on hover */
			}
		</style>
    <h1>CompteClient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compte_client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ compte_client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ compte_client.prenom }}</td>
            </tr>
            <tr>
                <th>Rib</th>
                <td>{{ compte_client.rib }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ compte_client.mail }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ compte_client.tel }}</td>
            </tr>
            <tr>
                <th>Solde</th>
                <td>{{ compte_client.solde }}</td>
            </tr>

             <tr>
                <th>Type</th>
                <td>
                {% if compte_client.getNomType() is not null %}
                    {{ compte_client.getNomType().NomType }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Pack</th>
                <td>
                 {% if compte_client.getNomPack() is not null %}
                    {{ compte_client.getNomPack().NomPack }}
                    {% endif %}
                </td>
             </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_compte_client_index') }}"class="button">back to list</a>

    <a href="{{ path('app_compte_client_edit', {'id': compte_client.id}) }}"class="button">edit</a>

    {{ include('compte_client/_delete_form.html.twig') }}
    </section>
{% endblock %}
